{% extends 'base.html.twig' %}

{% block titrePage %}Etudiant{% endblock %}

{% block contenu %}
    <h1>Etudiant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ etudiant.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ etudiant.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ etudiant.prenom }}</td>
            </tr>
            <tr>
                <th>Numéro étudiant</th>
                <td>{{ etudiant.numeroEtudiant }}</td>
            </tr>
            <tr>
                <th>Numéro de téléphone</th>
                <td>{{ etudiant.numeroTelephone }}</td>
            </tr>
            <tr>
                <th>Adresse mail</th>
                <td>{{ etudiant.adresseMail }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('etudiant_index') }}">Retour vers la liste des étudiants</a>

    <a href="{{ path('etudiant_edit', {'id': etudiant.id}) }}">Modifier</a>

    {{ include('etudiant/_delete_form.html.twig') }}
{% endblock %}
