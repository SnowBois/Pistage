{% extends 'base.html.twig' %}

{% block titrePage %}
    Mon profil
{% endblock %}

{% block contenu %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 col-offset-md-1">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Nom</th>
                            <td>{{ etudiant.nom }}</td>
                        </tr>
                        <tr>
                            <th>Prénom</th>
                            <td>{{ etudiant.prenom }}</td>
                        </tr>
                        <tr>
                            <th>Numéro étudiant</th>
                            <td>{{ etudiant.numeroEtudiant }}</td>
                        </tr>
                        <tr>
                            <th>Numéro de téléphone</th>
                            <td>{{ etudiant.numeroTelephone }}</td>
                        </tr>
                        <tr>
                            <th>Adresse mail</th>
                            <td>{{ etudiant.adresseMail }}</td>
                        </tr>
                    </tbody>
                </table>
                <a href="{{ path('app_changerMdp') }}">
                    <button type="button" class="btn btn-primary">modifier le mot de passer</button>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
